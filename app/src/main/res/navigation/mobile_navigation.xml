<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.fishybusiness.MapsActivity"
        android:label="@string/title_home"
        tools:layout="@layout/activity_maps" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.fishybusiness.ui.social.SocialFragment"
        android:label="@string/title_social"
        tools:layout="@layout/fragment_social" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.fishybusiness.ui.notifications.NotificationsFragment"
        android:label="@string/title_learn"
        tools:layout="@layout/fragment_learn" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.fishybusiness.ui.profile.ProfileFragment"
        android:label="@string/title_learn"
        tools:layout="@layout/fragment_learn" />
</navigation>